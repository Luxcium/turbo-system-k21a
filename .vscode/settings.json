{
  // Layer 2: VS Code workspace settings
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  "github.copilot.chat.codeGeneration.useInstructionFiles": true,
  "github.copilot.chat.commitMessageGeneration.instructions": [
    {
      "file": "memory-bank/instructions/conventional-commits-must-be-used.instructions.md"
    },
    {
      "text": "Use conventional commit message format."
    }
  ],
  // Connect memory-bank triad for agent context
  "chat.instructionsFilesLocations": {
    "memory-bank/instructions": true
  },
  "chat.promptFiles": true,
  "chat.promptFilesLocations": {
    "memory-bank/prompts": true
  },
  "chat.modeFilesLocations": {
    "memory-bank/chatmodes": true
  },
  "chat.agent.enabled": true,
  "chat.agent.thinkingStyle": "expanded",
  "chat.math.enabled": true
}
